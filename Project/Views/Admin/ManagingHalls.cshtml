@model Project.Models.Movie

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="@Url.Content("~/Content/MyStyle.css")" rel="stylesheet" type="text/css" />
    <meta name="viewport" content="width=device-width" />
    <title>Managing the movie halls</title>
</head>
<body>
    <div class="topnav">
        <a href="@Url.Action("MovieGallery", "User")">
            <span>Home Page</span>
        </a>
        <a href="@Url.Action("RemoveMovie", "Admin")">
            <span>Remove Movies</span>
        </a>

        <a href="@Url.Action("AddMovie", "Admin")">
            <span>Add Movies</span>
        </a>
        <a href="@Url.Action("ManagingPrices", "Admin")">
            <span>Managing Prices</span>
        </a>
        <a class="active" href="">Managing Movie Halls</a>

        <a href="@Url.Action("ManagingSeats", "Admin")">
            <span>Managing Seats Number</span>
        </a>
        <a href="@Url.Action("AddHall", "Admin")">
            <span>Add Hall</span>
        </a>
    </div>
    <div>
        <form action="SubManagingHalls" method="post">
            <h1> Managing the movie halls </h1>
            <br />
            Movie name   :<input id="Text1" type="text" name="MovieName" required />
            <br />
            Movie date   :<input id="Text1" type="date" name="date" required />
            <br />
            Movie time   :<input id="Text1" type="time" name="time" required />
            <br />
            Hall Id (new) :<input id="Text1" type="number" min="1" name="HallId" required />
            <br />
            <input id="Submit1" type="submit" value="Update" />


        </form>
    </div>
</body>
</html>

@if (TempData["msg"] != null)
{
    <h4 style="color:@TempData["color"];"> @TempData["msg"] </h4>
}
