@model Project.Models.Hall
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="@Url.Content("~/Content/MyStyle.css")" rel="stylesheet" type="text/css" />
    <meta name="viewport" content="width=device-width" />
    <title>Managing the number of seats in halls</title>
</head>
<body>
    <div class="topnav">
        <a href="@Url.Action("MovieGallery", "User")">
            <span>Home Page</span>
        </a>
        <a href="@Url.Action("RemoveMovie", "Admin")">
            <span>Remove Movies</span>
        </a>

        <a href="@Url.Action("AddMovie", "Admin")">
            <span>Add Movies</span>
        </a>
        <a href="@Url.Action("ManagingPrices", "Admin")">
            <span>Managing Prices</span>
        </a>
        <a href="@Url.Action("ManagingHalls", "Admin")">
            <span>Managing Movie Halls</span>
        </a>
        <a class="active" href="">Managing Seats Number</a>
        <a href="@Url.Action("AddHall", "Admin")">
            <span>Add Hall</span>
        </a>
    </div>
    <div>
        <form action="SubManagingSeats" method="post">
            <h1> Managing the number of seats in halls </h1>
            Hall id:<input id="Text1" type="number" name="HallId" min="1" required />
            <br />

            Number of seats (new):<input id="Text1" type="number" name="NumSeats" min="1" required />
            <br />

            <input id="Submit1" type="submit" value="Update" />


        </form>
    </div>
</body>
</html>

@if (TempData["msg"] != null)
{
    <h4 style="color:@TempData["color"];"> @TempData["msg"] </h4>
}
