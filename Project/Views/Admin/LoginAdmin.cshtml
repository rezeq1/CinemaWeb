@model Project.Models.Admin

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="@Url.Content("~/Content/MyStyle.css")" rel="stylesheet" type="text/css" />
    <meta name="viewport" content="width=device-width" />
    <title>Login for admins</title>
</head>
<body>
    <div class="topnav">
        <a href="@Url.Action("MovieGallery", "User")">
            <span> Movie Gallery</span>
        </a>
        <a href="@Url.Action("LoginUser", "User")">
            <span> Login for users</span>
        </a>
        <a href="@Url.Action("RegisterUser", "User")">
            <span> Register for users</span>
        </a>
        <a href="@Url.Action("ShoppingCart", "User")">
            <span> Shopping Cart</span>
        </a>

        <a class="active" href="">Login for admins</a>

        <a href="@Url.Action("RegisterAdmin", "Admin")">
            <span> Register for admins</span>
        </a>
    </div>
    <div>
        <form action="SubLoginAdmin" method="post">

            <h1>Login for admins</h1>
            <br />
            email : <input id="Text1" type="email" name="email" required />
            <br />
            password : <input id="Text1" type="password" name="password" required />
            <br />

            <input id="Submit1" type="submit" value="Login" />

        </form>
    </div>
</body>
</html>

@if (TempData["testmsg"] != null)
{
    <h4 style="color:red;"> @TempData["testmsg"] </h4>
}
